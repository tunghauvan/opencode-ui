# OpenCode API Configuration
OPENCODE_BASE_URL=http://localhost:4096

# Optional: Database URL if needed in the future
# DATABASE_URL=sqlite:///./opencode.db

# Optional: API Keys
# OPENAI_API_KEY=your_key_here
# Session Management Configuration
# Timeout for idle sessions in minutes (default: 15)
SESSION_IDLE_TIMEOUT_MINUTES=15

# How often to check for idle sessions in seconds (default: 60)
SESSION_CHECK_INTERVAL_SECONDS=60

# Enable/disable the cleanup worker (default: true)
SESSION_ENABLE_CLEANUP_WORKER=true

# Enable/disable automatic session recovery (default: true)
SESSION_ENABLE_AUTO_RECOVERY=true

# Container stop timeout in seconds (default: 10)
SESSION_CONTAINER_STOP_TIMEOUT=10

# Number of retries for container operations (default: 3)
SESSION_CONTAINER_OPERATION_RETRIES=3

# Log level for session management (default: INFO)
SESSION_LOG_LEVEL=INFO
