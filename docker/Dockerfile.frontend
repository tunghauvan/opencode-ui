FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY ui/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY ui/ ./

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Serve the built application
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3000"]